{% extends "ABSiteBundle::layout.html.twig" %}


{% block title %}
  Contact - {{ parent() }}
{% endblock %}

{% block absite_body %}




  <h2>Me contacter</h2>
  
 <div class="well">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}

    <div class="form-group">
      {{ form_label(form.nom, "Nom", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

      {{ form_errors(form.nom) }}

      <div class="col-sm-4">
        {# Génération de l'input. #}
        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>

    <div class="form-group">
      {{ form_label(form.email, "Email", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.email) }}
      <div class="col-sm-4">
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>

    <div class="form-group">
      {{ form_label(form.sujet, "Sujet", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.sujet) }}
      <div class="col-sm-4">
        {{ form_widget(form.sujet, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>

	<div class="form-group">
      {{ form_label(form.message, "Message", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.message) }}
      <div class="col-sm-4">
        {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
  {{ form_widget(form.envoyer, {'attr': {'class': 'btn btn-primary'}}) }}

  
  {{ form_rest(form) }}
  
  {{ form_end(form) }}
</div>

{% endblock %}